<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Accueil{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}
          <h1>Créer un nouveau Pin</h1>

          <a href="{{ path('app_home')}}">Revenir à l'accueil</a>

          <form method='post' >
            <div>
              <input type="hidden" name="_token" value="{{ csrf_token('pins_create') }}"></input>
            </div>
            <div>
              <label for='title'>Titre</label><br>
              <input type="text" id='title' name='title'></input>
            </div>
            <div>
              <label for='decription'>Description</label><br>
              <textarea type="text" id='decription' name='description'></textarea>
            </div>
            <input type='submit' value='Envoyer'></input>
          </form>

        {% endblock %}
    </body>
</html>
